@import "variables"
@import "underline"

filter(n)
	-webkit-filter n
	-moz-filter n
	filter n

.header
	background-image: url("../img/header.jpg")
	background-position: center
	background-repeat: no-repeat
	background-size: cover
	width: 100%
	height: 50vh
	display: block
	box-sizing: border-box
	filter(saturate(120%))
	position: relative

.header__title
	font-size: 6rem
	text-align: center
	color: headerColor
	text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5)
	margin: 0
	padding: 0
	font-weight: 300
	margin-top: 10vh

.header__title a
	color: headerColor

.header__title a:hover
	link-underline(rgba(0,0,0,0), headerColor, headerColor)

.header__subtitle
	margin: 0
	padding: 0
	font-size: 2em
	text-align: center
	color: headerColor
	text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5)
	font-weight: 300

.header__nav
	width: contentWidth
	margin: 0 auto
	margin-top: 0.5rem

.header__link
	margin: 0 1rem
	color: headerColor
	opacity: 0.8
	&:hover
		link-underline(rgba(0,0,0,0), headerColor, headerColor)
		opacity: 1
