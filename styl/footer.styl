@import "variables"
@import "underline"

footerBackgroundColor = textColor
footerTextColor = backgroundColor

.footer
	background-color: footerBackgroundColor
	color: footerTextColor
	padding: 2rem 0
	display: flex
	flex-direction: row
	justify-content: center

.footer p
	margin: 0

.footer-content
	display: flex
	flex-direction: row
	justify-content: flex-start
	flex-wrap: wrap
	width: contentWidth

.footer__element
	padding: 1rem
	width: (contentWidth / 4)

.footer-links
	margin: 0
	padding: 0

.footer-links__link
	list-style-type: none

.footer-links__link a:hover
	link-underline(footerBackgroundColor, mainColor, mainColor)
